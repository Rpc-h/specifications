@startuml

package Wallet {
	together {
		frame "Account 1" as a1
		frame "Account 2" as a2
	}
	[RPCh client] as cl
}

[RPC Provider] as pr

cloud "HOPR network" as hopr

[RPCh exit node 1] as ex1
[RPCh exit node 2] as ex2

a1 --> cl : uses
a2 --> cl : uses

cl --> hopr : send messages (RPC request)

hopr --> ex1 : receive messages (RPC request)
hopr --> ex2 : receive messages (RPC request)

ex1 --> pr : perform RPC HTTP requests
ex2 --> pr : perform RPC HTTP requests

ex1 -up-> hopr : send messages (RPC response)
ex2 -up-> hopr : send messages (RPC response)

hopr -up-> cl : receive messages (RPC response)

@enduml
